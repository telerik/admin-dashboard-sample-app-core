        </container>
    </containers>
</kendo-tilelayout>

<kendo-contextmenu name="context-menu" on-select="onSelect" target="#tilelayout" filter=".contextMenuButton" orientation="ContextMenuOrientation.Vertical">
    <items>
        <menu-item text="<span class='k-font-icon k-icon k-i-delete'></span> Delete" encoded=false ></menu-item>
    </items>
</kendo-contextmenu>

